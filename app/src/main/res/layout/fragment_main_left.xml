<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainLeftFragment">
    <!--空调部分-->
    <RelativeLayout
        android:id="@+id/left_condition_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--头背景-->
        <LinearLayout
            android:id="@+id/left_condition_img_layout"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:orientation="vertical">

        </LinearLayout>
        <!--按钮-->
        <RelativeLayout
            android:layout_below="@id/left_condition_img_layout"
            android:id="@+id/left_condition_button_layout"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="90px"
                android:layout_height="36px"
                android:layout_alignParentLeft="true"/>
            <ImageButton
                android:layout_width="90px"
                android:layout_height="36px"
                android:layout_centerInParent="true"/>
            <ImageButton
                android:layout_width="90px"
                android:layout_height="36px"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <!--滑动条-->
        <RelativeLayout
            android:layout_below="@id/left_condition_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <!--车外灯光部分-->
    <RelativeLayout
        android:layout_below="@id/left_condition_layout"
        android:id="@+id/left_light_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--头背景-->
        <LinearLayout
            android:id="@+id/left_light_img_layout"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:orientation="vertical">

        </LinearLayout>
        <!--按钮组-->
        <LinearLayout
            android:id="@+id/left_light_button_layout"
            android:layout_below="@id/left_light_img_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--左边-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!--上部-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--近光灯-->
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <!--远光灯-->
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <!--下部-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <!--右边-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <!--底部背景-->
        <LinearLayout
            android:layout_below="@id/left_light_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>